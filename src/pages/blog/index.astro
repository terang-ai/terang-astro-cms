---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

// Import all images
import placeholder1 from '../../assets/blog-placeholder-1.jpg';
import placeholder2 from '../../assets/blog-placeholder-2.jpg';
import placeholder3 from '../../assets/blog-placeholder-3.jpg';
import placeholder4 from '../../assets/blog-placeholder-4.jpg';
import placeholder5 from '../../assets/blog-placeholder-5.jpg';
import placeholderAbout from '../../assets/blog-placeholder-about.jpg';
import terangAiBrics from '../../assets/terang-ai-brics.png';
import terangBrics from '../../assets/terang-brics.png';
import brics1 from '../../assets/brics-1.png';
import brics2 from '../../assets/brics-2.png';
import fotoBrics from '../../assets/foto-brics.jpeg';
import terangAI from '../../assets/terang-ai.png';

const imageMap = {
	'../../assets/blog-placeholder-1.jpg': placeholder1,
	'../../assets/blog-placeholder-2.jpg': placeholder2,
	'../../assets/blog-placeholder-3.jpg': placeholder3,
	'../../assets/blog-placeholder-4.jpg': placeholder4,
	'../../assets/blog-placeholder-5.jpg': placeholder5,
	'../../assets/blog-placeholder-about.jpg': placeholderAbout,
	'../../assets/terang-ai-brics.png': terangAiBrics,
	'../../assets/terang-brics.png': terangBrics,
	'../../assets/brics-1.png': brics1,
	'../../assets/brics-2.png': brics2,
	'../../assets/foto-brics.jpeg': fotoBrics,
	'../../assets/terang-ai.png': terangAI,
};

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && imageMap[post.data.heroImage] && (
										<Image width={720} height={360} src={imageMap[post.data.heroImage]} alt="" />
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
