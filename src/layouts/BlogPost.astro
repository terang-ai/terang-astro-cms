---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

// Import all placeholder images
import placeholder1 from '../assets/blog-placeholder-1.jpg';
import placeholder2 from '../assets/blog-placeholder-2.jpg';
import placeholder3 from '../assets/blog-placeholder-3.jpg';
import placeholder4 from '../assets/blog-placeholder-4.jpg';
import placeholder5 from '../assets/blog-placeholder-5.jpg';

// Import BRICS images
import terangAIBrics from '../assets/terang-ai-brics.png';
import terangBrics from '../assets/terang-brics.png';
import brics1 from '../assets/brics-1.png';
import brics2 from '../assets/brics-2.png';
import fotoBrics from '../assets/foto-brics.jpeg';
import placeholderAbout from '../assets/blog-placeholder-about.jpg';
import terangAI from '../assets/terang-ai.png';

const imageMap = {
	'../../assets/blog-placeholder-1.jpg': placeholder1,
	'../../assets/blog-placeholder-2.jpg': placeholder2,
	'../../assets/blog-placeholder-3.jpg': placeholder3,
	'../../assets/blog-placeholder-4.jpg': placeholder4,
	'../../assets/blog-placeholder-5.jpg': placeholder5,
	'../../assets/blog-placeholder-about.jpg': placeholderAbout,
	'../../assets/terang-ai-brics.png': terangAIBrics,
	'../../assets/terang-brics.png': terangBrics,
	'../../assets/brics-1.png': brics1,
	'../../assets/brics-2.png': brics2,
	'../../assets/foto-brics.jpeg': fotoBrics,
	'../../assets/terang-ai.png': terangAI,
};

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
const heroImageSrc = heroImage ? imageMap[heroImage] : null;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImageSrc && <Image width={1020} height={510} src={heroImageSrc} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
